<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/debugger_item_selector"
              android:orientation="vertical"
              android:clickable="true"
              android:focusable="true"
              android:paddingBottom="14dip"
              android:paddingStart="13dip"
              android:paddingEnd="13dip"
              android:paddingTop="14dip">
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/second_text"
        android:textSize="12sp"
        tools:text="这里是描述"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:breakStrategy="simple"
            android:textColor="@color/second_text"
            android:textSize="12sp"
            tools:text="test"/>
        <TextView
            android:id="@+id/abbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textColor="@color/third_text"
            android:textSize="12sp"
            android:text="缩"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:orientation="horizontal"
        android:id="@+id/extra_layout">
        <TextView
            android:id="@+id/exported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dip"
            android:textColor="@color/error_hint"
            android:textSize="12sp"
            android:text="exported:true"/>
        <TextView
            android:id="@+id/disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/error_hint"
            android:textSize="12sp"
            android:text="disabled:true"/>
    </LinearLayout>
</LinearLayout>
